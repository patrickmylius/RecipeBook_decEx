                    <Label text="2 x Garlics" GridPane.columnIndex="0" GridPane.rowIndex="5">
                    </Label>
                    <Label text="2 x Slices of bacon" GridPane.columnIndex="0" GridPane.rowIndex="6">
                    </Label>
                    <Label text="1 x Spoon of salt" GridPane.columnIndex="0" GridPane.rowIndex="7">
                    </Label>
                    <Label text="2 x Eggs" GridPane.columnIndex="0" GridPane.rowIndex="8">
                    </Label>
                    <Label text="3 x Semi-dried tomatoes" GridPane.columnIndex="0" GridPane.rowIndex="9">
                    </Label>
                    <Label text="4 x sliced Cheddar cheese" GridPane.columnIndex="0" GridPane.rowIndex="10">
                    </Label>
                </GridPane>
                <GridPane prefHeight="300" prefWidth="200" hgap="10" vgap="10">
                    <Label fx:id="howToGuide" text="Preparing the course" style="-fx-font-size: 20"
                           GridPane.columnIndex="0" GridPane.rowIndex="0">
                    </Label>
                    <Label GridPane.columnIndex="0" GridPane.rowIndex="1" wrapText="true"
                           text="Turn on your oven on 180Â¤">
                    </Label>
                    <Label GridPane.columnIndex="0" GridPane.rowIndex="2" wrapText="true"
