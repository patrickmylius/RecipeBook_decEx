<Stage title="Burger Recipe" xmlns:fx="http://javafx.com/fxml" fx:controller="sample.GUI.recipeController">
    <scene>
        <Scene width="600" height="600">
            <SplitPane prefWidth="200" prefHeight="300">
                <GridPane prefHeight="300" prefWidth="200" hgap="10" vgap="10">
                    <Label fx:id="Ingredients" text="Ingredients" style="-fx-font-size: 20" GridPane.columnIndex="0"
