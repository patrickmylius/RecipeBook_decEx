<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.Scene?>
<?import javafx.stage.Stage?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.SplitPane?>
<Stage title="Pizza Recipe" xmlns:fx="http://javafx.com/fxml" fx:controller="sample.startController">
    <scene>
        <Scene width="600" height="600">
            <SplitPane prefWidth="200" prefHeight="300">
                <GridPane prefHeight="300" prefWidth="200" hgap="10" vgap="10">
                    <Label fx:id="Ingredients" text="Ingredients" style="-fx-font-size: 20" GridPane.columnIndex="0"
                           GridPane.rowIndex="0">
                    </Label>
                    <Label text="50g x Gær" GridPane.columnIndex="0" GridPane.rowIndex="2">
                    </Label>
                    <Label text="3 x Water" GridPane.columnIndex="0" GridPane.rowIndex="3">
                    </Label>
                    <Label text="500g x Wheat" GridPane.columnIndex="0" GridPane.rowIndex="4">
                    </Label>
                    <Label text="1 x can of Tomatosauce" GridPane.columnIndex="0" GridPane.rowIndex="5">
                    </Label>
                    <Label text="150g x Ham" GridPane.columnIndex="0" GridPane.rowIndex="6">
                    </Label>
                    <Label text="100g x Cheese" GridPane.columnIndex="0" GridPane.rowIndex="7">
                    </Label>

                </GridPane>
                <GridPane prefHeight="300" prefWidth="200" hgap="10" vgap="10">
                    <Label fx:id="howToGuide" text="Preparing the course" style="-fx-font-size: 20"
                           GridPane.columnIndex="0" GridPane.rowIndex="0">
                    </Label>
                    <Label GridPane.columnIndex="0" GridPane.rowIndex="1" wrapText="true"
                           text="Turn on your oven on 180¤">
                    </Label>
                    <Label GridPane.columnIndex="0" GridPane.rowIndex="2" wrapText="true"
                           text="For the pizza bottom, put wheat, salt, water and pepper together">
                    </Label>
                    <Label GridPane.columnIndex="0" GridPane.rowIndex="3" wrapText="true"
                           text="Blend the tomato sauce and put it atop the pizza bottom">
                    </Label>
                    <Label GridPane.columnIndex="0" GridPane.rowIndex="4" wrapText="true"
                           text="Add cheese and ham and put in oven for 30 min">
                    </Label>
                </GridPane>
            </SplitPane>
        </Scene>
    </scene>
</Stage>
